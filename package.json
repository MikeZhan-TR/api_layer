{
  "name": "api_layer",
  "version": "1.0.0",
  "description": "API layer for USAspending data integration with Lovable frontend and Supabase backend",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "postinstall": "npm run build"
  },
  "keywords": [
    "usaspending",
    "government-data",
    "api",
    "snowflake",
    "supabase",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "snowflake-sdk": "^1.9.0",
    "@supabase/supabase-js": "^2.38.0",
    "zod": "^3.22.2",
    "compression": "^1.7.4",
    "rate-limiter-flexible": "^3.0.6",
    "winston": "^3.10.0",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.14",
    "@types/compression": "^1.7.3",
    "@types/node": "^20.5.0",
    "typescript": "^5.1.6",
    "tsx": "^3.12.7",
    "jest": "^29.6.2",
    "@types/jest": "^29.5.4",
    "eslint": "^8.47.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "prettier": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
